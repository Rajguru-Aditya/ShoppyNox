<%-include("header")-%>

<header> 
<h1><%= prodName %></h1>
<hr>
</header>

<div class="container">
    <div class="card-container">
        <div class="flex-container">
            <div class="prod-card mb-3">
            <img src="<%= prodImg%>" alt="<%= prodName%>">
            </div>
        </div>
    </div>
    <div class="flex-container">
            <div class="prod-desc mb-3">
                <div class="card-body">
                    <p class="card-text"><%= prodCost %></p>
                    <p class="card-text"><%= prodRating %></p>
                    <p class="card-text"><%= prodMake %></p>
                </div>
            </div>
        </div>
</div>

<%-include("footer")-%>